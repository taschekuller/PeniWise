# Production Environment Variables
# Copy this file to .env.production and update values

# Database Configuration
DATABASE_URL="postgresql://username:password@your-db-host:5432/peniwise_prod?schema=public"

# JWT Configuration (CHANGE THIS IN PRODUCTION!)
JWT_SECRET="your-production-jwt-secret-key-must-be-very-long-and-secure"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3000
NODE_ENV="production"

# Redis Configuration
REDIS_URL="redis://your-redis-host:6379"

# Email Configuration (Production SMTP)
SMTP_HOST="your-smtp-host.com"
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER="your-production-email@yourdomain.com"
SMTP_PASS="your-production-smtp-password"
SMTP_FROM="noreply@yourdomain.com"

# Frontend URL (Production)
FRONTEND_URL="https://your-frontend-domain.com"

# API Configuration
API_PREFIX="api"
API_VERSION="v1"

# Rate Limiting (Stricter for production)
THROTTLE_TTL=60
THROTTLE_LIMIT=5

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH="/app/uploads"

# Logging
LOG_LEVEL="info"

# Security
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN="https://your-frontend-domain.com"
CORS_CREDENTIALS=true

# Swagger Documentation (Disabled in production)
SWAGGER_ENABLED=false
SWAGGER_PATH="docs"

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH="/path/to/cert.pem"
SSL_KEY_PATH="/path/to/key.pem"

# Monitoring
SENTRY_DSN="your-sentry-dsn-for-error-tracking"

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
